<table class="table table-success">
    <thead>
        <tr>
            <th class="top-left-radius">Nombre</th>
            <th class="top-right-radius">Imagen</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        {{#each items}}
        <tr>
            {{#if @last}}
            <td class="bottom-left-radius"><b><a href="/{{this.doc}}/{{this.id}}">{{this.name}}</a></b></td>
            <td class="bottom-right-radius"><b><a href="/{{this.doc}}/{{this.id}}"><img class="rounded"
                            src="{{this.image}}" alt="{{this.name}}"></a></b></td>
            {{else}}
            <td><b><a href="/{{this.doc}}/{{this.id}}">{{this.name}}</a></b></td>
            <td><b><a href="/{{this.doc}}/{{this.id}}"><img class="rounded" src="{{this.image}}"
                            alt="{{this.name}}"></a></b>
            </td>
            {{/if}}
        </tr>
        {{/each}}
    </tbody>
</table>